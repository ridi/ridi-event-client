{
  "compilerOptions": {
      "experimentalDecorators": true,
    "rootDir": "src",
    "lib": ["esnext", "dom"],
    "module": "commonjs",
    "outDir": "./dist/cjs",
    "declarationDir": "./dist/typings",
    "declaration": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "removeComments": true,
    "target": "es5",
    "sourceMap": true
  },
  "include": [
    ".eslintrc.js",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
